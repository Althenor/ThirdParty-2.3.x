# Script
#     makeQt
#
# Description
#     Build script for Qt-4.3.5
#
#------------------------------------------------------------------------------
qtVERSION=4.3.5
qtPACKAGE=qt-x11-opensource-src-$qtVERSION

#------------------------------------------------------------------------------
# run from third-party directory only
wmakeCheckPwd "$WM_THIRD_PARTY_DIR" || {
    echo "Error: Current directory is not \$WM_THIRD_PARTY_DIR"
    echo "    The environment variables are inconsistent with the installation."
    echo "    Check the OpenFOAM entries in your dot-files and source them."
    exit 1
}
. tools/makeThirdPartyFunctions
#------------------------------------------------------------------------------

# get the number of cores to build on
getNCOMPPROCS

QT_ARCH_PATH=$WM_THIRD_PARTY_DIR/platforms/$WM_OPTIONS/$qtPACKAGE

#
# Build QT
#
echo "---------------"
if [ -d "$QT_ARCH_PATH" ]
then
    echo "Already built: Qt-$qtVERSION"
else
    echo "Starting build: Qt-$qtVERSION"
(
    cd $qtPACKAGE || exit 1

    make distclean
    rm -rf $QT_ARCH_PATH

    ./configure --prefix=$QT_ARCH_PATH \
        -nomake demos \
        -nomake examples \
    && time make -j $WM_NCOMPPROCS \
    && make install \
    && echo "Built: Qt-$qtVERSION"
) || {
    echo "Error building: Qt-$qtVERSION"
    exit 1
}
fi

# ----------------------------------------------------------------- end-of-file
